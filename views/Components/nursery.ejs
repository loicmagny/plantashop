<%- include('./Components/header') %>
    <style>
        .title {
            text-align: center;
        }

        .map {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        #map {
            border: 2px solid #333;
            width: 80vw;
            height: 80vh;
        }

        .parent {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-template-rows: 1fr;
            grid-column-gap: 0px;
            grid-row-gap: 0px;
        }

        .div1 {
            grid-area: 1 / 2 / 2 / 3;
        }

        .div2 {
            grid-area: 1 / 3 / 2 / 4;
        }
    </style>

    <h1 class="title">Cherchez votre nursery</h1>

    <div class="map">
        <div id="map"></div>
    </div>
    <div class="parent">
        <div class="div1"><button>Open in maps</button></div>
        <div class="div2"><button>Appeler</button></div>
    </div>
    <script>
        let map;
        document.addEventListener("DOMContentLoaded", () => {
            let s = document.createElement("script");
            document.head.appendChild(s);
            s.addEventListener("load", () => {
                //script has loaded
                console.log("script has loaded");
                map = new google.maps.Map(document.getElementById("map"), {
                    center: {
                        lat: 49.8941708,
                        lng: 2.2956951
                    },
                    zoom: 16,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                });
            });
            s.src = `https://maps.googleapis.com/maps/api/js?key=AIzaSyA4YhW76WXY-tIrzjf9eIvzSyqDecjNtOo`;
        });
    </script>